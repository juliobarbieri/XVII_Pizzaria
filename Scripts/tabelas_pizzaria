-- Tabelas pizzaria

CREATE TABLE cliente
(
  telefone character varying(9) NOT NULL,
  nome character varying(255) NOT NULL,
  endereco character varying(255) NOT NULL,
  --senha character varying(255),
  CONSTRAINT cliente_pkey PRIMARY KEY (telefone)
);


CREATE TABLE cardapio
(
  nome_pizza character varying(255) NOT NULL,
  nome character varying(255) NOT NULL,
  preco float NOT NULL,
  CONSTRAINT cardapio_pkey PRIMARY KEY (nome_pizza)
);

CREATE TABLE pedido
(
  telefone character varying(9) NOT NULL,
  data character varying(255) NOT NULL,
  hora character varying(255) NOT NULL,
  nome_pizza character varying(255) NOT NULL,
  CONSTRAINT pedido_pkey PRIMARY KEY (telefone, data, hora)
);